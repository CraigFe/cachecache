(library
 (public_name gospel-lru)
 (name gospel_lru)
 (flags
  (:standard -w -27-32))
 ; for generated files
 (libraries zarith))

(rule
 (targets gospel_lru_impl__DLList.ml gospel_lru_impl__Impl.ml)
 (deps gospel_lru.mli gospel_lru_impl.mlw)
 (action
  (run why3 extract -D ocaml64 -L . --modular -o . gospel_lru_impl.mlw)))

(rule
 (target gospel_lru.ml)
 (deps gospel_lru_impl__Impl.ml)
 (action
  (copy %{deps} %{target})))

